<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrese</title>
    <link rel="stylesheet" href="resource/css/style.css">
</head>
<body>
    <div class="register-form">
        <h1>Resistro de usuario</h1>
        <form action="/register" method="POST">
            <label for="email">Email</label>
            <input type="text" name="email" required>

            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" required>

            <label for="rol">Rol</label>
            <select name="rol" id="rol" class="select-css" required>
                <option value="Cajero">Cajero</option>
                <option value="Gestor de finanzas">Gestor de finanzas</option>
                <option value="Garzon">Garzon</option>
                <option value="Cocinero">Cocinero</option>
                <option value="Bodeguero">Bodeguero</option>
            </select>
            <br>
            <label for="password">Password</label>
            <input type="password" name="password" id="password">

            <div style="display: inline;">
                <a href="/" class="btn-cancel">Cancelar</a><input type="submit" class="btn-save" value="Save">

            </div>
        </form>
    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(typeof alert != "undefined") {%>
        <script>
            Swal.fire({
                title:'<%= alertTitle%>',
                text:'<%= alertMessagge%>',
                icon:'<%= alertIcon%>',
                showConfirmButton:<%= showConfirmButton%>,
                timer:<%= timer%>
            }).then(()=>{
                window.location='/ <%= ruta %>'
            })
        </script>
    <% } %>
</body>
</html>