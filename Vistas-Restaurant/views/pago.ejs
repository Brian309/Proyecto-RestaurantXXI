      <ul class="navbar-nav" style="color: black;">
        <li class="nav-item">
          <a class="nav-link" style="color: white;" href="/tablet">Menu</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="platos" href="/tablet/1">Platos Principales</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/tablet/3">Bebestibles</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/tablet/4">Postres</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/tablet/5">Entrada</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/tablet/2">Ensaladas</a>
